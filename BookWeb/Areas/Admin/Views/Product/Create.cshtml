@using Book.Models.Models
@using BookWeb
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Product
@{
   
}
<div class="container py-5">

    <div class="row justify-content-center">
        <div class="col-lg-6">

            <div class="card border-0 shadow">

                <!-- Card Header -->
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-folder-plus me-2"></i>
                        Create Product
                    </h5>
                </div>

                <!-- Card Body -->
                <div class="card-body p-4">

                    <form method="post">

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter title" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <input asp-for="Description" class="form-control" placeholder="Description" />
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="ISBN" class="form-label fw-semibold"></label>
                            <input asp-for="ISBN" class="form-control" placeholder="ISBN" />
                            <span asp-validation-for="ISBN" class="text-danger small"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Author" class="form-label fw-semibold"></label>
                            <input asp-for="Author" class="form-control" placeholder="Enter Author name" />
                            <span asp-validation-for="Author" class="text-danger small"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="ListPrice" class="form-label fw-semibold"></label>
                            <input asp-for="ListPrice" class="form-control" placeholder="List Price" />
                            <span asp-validation-for="ListPrice" class="text-danger small"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Price" class="form-label fw-semibold"></label>
                            <input asp-for="Price" class="form-control" placeholder="Enter Price for 1-50 unit " />
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Price50" class="form-label fw-semibold"></label>
                            <input asp-for="Price50" class="form-control" placeholder="Enter Price for 50++ unit " />
                            <span asp-validation-for="Price50" class="text-danger small"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Price100" class="form-label fw-semibold"></label>
                            <input asp-for="Price100" class="form-control" placeholder="Enter Price for 100 unit " />
                            <span asp-validation-for="Price100" class="text-danger small"></span>
                        </div>
                        <hr />

                        <div class="d-flex justify-content-end gap-2">

                            <a asp-controller="Product"
                               asp-action="List"
                               class="btn btn-outline-secondary">
                                Cancel
                            </a>

                            <button type="submit" class="btn btn-primary px-4">
                                Save Product
                            </button>

                        </div>

                    </form>

                </div>

            </div>

        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
